<%= form_with url: "/gardens/#{@garden.id}/vegetables", method: :post, local: true do |form| %>
    <%= form.label :name %>
    <%= form.text_field :name %>
    <%= form.label :perennial, "Perennial" %>
    <%= form.check_box :perennial %>
    <%= form.label :min_hrs_sun, "Minimum Hours of Sun" %>
    <%= form.number_field :min_hrs_sun %>
    <%= form.submit "Create New Vegetable" %>
<% end %>
