<%= form_with url: "/vegetables/#{@vegetable.id}", method: :patch, local: true do |form| %>
  <%= form.label :name, "Name:" %>
  <%= form.text_field :name, :value => @vegetable.name %>
  <br>
  <%= form.label :perennial, "Perennial:" %>
  <%= form.text_field :perennial, :value => @vegetable.perennial %>
  <br>
  <%= form.label :min_hrs_sun, "Minimum Hours of Sunlight:" %>
  <%= form.text_field :min_hrs_sun, :value => @vegetable.min_hrs_sun%>
  <br>
  <%= form.submit "Update Vegetable" %>
<% end %>
